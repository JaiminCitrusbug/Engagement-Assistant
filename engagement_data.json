  "campaign_effectiveness_tracking": {
    "key_metrics": {
      "engagement_metrics": {
        "metric_category": "Engagement",
        "metrics": [
          {
            "metric": "Open Rate",
            "description": "Percentage of recipients who opened the message",
            "calculation": "(Opens / Delivered) × 100",
            "benchmark": "Email: 20-25%, SMS: 95-98%",
            "improvement_tips": ["Improve subject lines", "Optimize send times", "Segment audiences better"]
          },
          {
            "metric": "Click-Through Rate (CTR)",
            "description": "Percentage of recipients who clicked on links",
            "calculation": "(Clicks / Delivered) × 100",
            "benchmark": "Email: 2-5%, SMS: 10-15%",
            "improvement_tips": ["Clear call-to-action", "Relevant content", "Mobile-optimized design"]
          },
          {
            "metric": "Conversion Rate",
            "description": "Percentage who completed desired action",
            "calculation": "(Conversions / Clicks) × 100",
            "benchmark": "Varies by action type (typically 1-5%)",
            "improvement_tips": ["Simplify conversion process", "Reduce friction", "Clear value proposition"]
          },
          {
            "metric": "Engagement Rate",
            "description": "Overall engagement across all interactions",
            "calculation": "(Total Engagements / Total Reach) × 100",
            "benchmark": "Varies by channel and industry",
            "improvement_tips": ["Improve content relevance", "Better targeting", "Optimal timing"]
          }
        ]
      },
      "reach_metrics": {
        "metric_category": "Reach",
        "metrics": [
          {
            "metric": "Delivery Rate",
            "description": "Percentage of messages successfully delivered",
            "calculation": "(Delivered / Sent) × 100",
            "benchmark": "Email: 95-98%, SMS: 98-99%",
            "improvement_tips": ["Maintain clean contact lists", "Authenticate sending domains", "Comply with regulations"]
          },
          {
            "metric": "Reach",
            "description": "Number of unique recipients who saw the message",
            "calculation": "Unique recipients who received message",
            "benchmark": "Varies by campaign size",
            "improvement_tips": ["Expand contact lists", "Improve deliverability", "Multi-channel approach"]
          },
          {
            "metric": "Impressions",
            "description": "Total number of times message was displayed",
            "calculation": "Sum of all message displays",
            "benchmark": "Varies by channel",
            "improvement_tips": ["Increase frequency", "Retargeting", "Multi-touch campaigns"]
